pkgname=convpot
pkgver=v1.1.1
pkgrel=1
pkgdesc="Convert potentiostat data to a SQLite database"
arch=('i686' 'x86_64')
url="https://github.com/ahpohl/convpot"
license=('MIT')
depends=('mdbtools' 'sqlite3')
makedepends=('cmake' 'git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+https://github.com/ahpohl/convpot.git#tag=${pkgver}")
sha256sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"

  cmake \
	-DCMAKE_INSTALL_PREFIX="/usr" \
	.

  make -j $(nproc) all
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="${pkgdir}" install
}
