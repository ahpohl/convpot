# Maintainer: Alexander Pohl <alex@ahpohl.com>
pkgname=convpot
pkgver=v1.1.1
pkgrel=1
epoch=
pkgdesc="Convert potentiostat data to a SQLite database"
arch=('i686' 'x86_64')
url="https://github.com/ahpohl/convpot"
license=('MIT')
groups=()
depends=('unixodbc' 'sqlite3')
makedepends=('cmake' 'git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+https://github.com/ahpohl/convpot.git#tag=${pkgver}")
noextract=()
sha256sums=('SKIP')
validpgpkeys=()

prepare() {
	cd "$pkgname"
	cp cmake/CMakeLists.txt.linux CMakeLists.txt
}

build() {
	cd "$pkgname"
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
        make
}

package() {
	cd "$pkgname" 
	make DESTDIR="$pkgdir/" install
}
